---
interface Props {
  data: {
    title: string;
    subTitle: string;
    primaryCta: string;
    secondaryCta: string;
    highlightedTitle?: string;
  };
}

const { data } = Astro.props;
---

<section id="hero-section" class="flex justify-center mt-48 h-screen">
  <div class="md:w-1/2">
    <h1 class="text-4xl text-center font-semibold md:text-6xl">
      {data.title}
      <span class="text-blue-700"> {data.highlightedTitle} </span>
    </h1>
    <h2 class="mt-10 text-lg text-center opacity-80 md:text-2xl">
      {data.subTitle}
    </h2>
    <div class="flex justify-evenly mt-10">
      <a
        class="px-3 py-1 text-sm md:text-base md:px-6 md:py-2 rounded-lg text-center text-white font-semibold bg-black hover:scale-110 hover:opacity-85 transition inline-block"
        href="https://github.com/JimmyCamus/luna-landing"
        target="_blank"
      >
        {data.primaryCta}
      </a>
      <a
        class="px-3 py-1 text-sm md:text-base md:px-6 md:py-2 rounded-lg text-center border border-black font-semibold hover:scale-110 hover:opacity-85 transition inline-block"
        href="https://github.com/JimmyCamus/luna-landing"
        target="_blank"
      >
        {data.secondaryCta}
      </a>
    </div>
    <div class="flex justify-center">
      <a
        class="flex justify-center items-center animate-bounce border-2 border-transparent bg-blue-700 text-white rounded-full w-14 h-14 mt-32 hover:bg-white hover:text-blue-700 hover:border-blue-700 transition"
        href="#services-section"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-8 h-8"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
